<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST" >
        <div class="field">
            <lable>Title</lable>
            <input type="text" name="blog[title]" value=<%= blog.title%>>
        </div>
        <div class="field">
            <lable>Image</lable>
            <input type="text" name="blog[image]"  value=<%= blog.image%>>
        </div>
         <div class="field">
            <lable>Blog Content</lable>
            <textarea type="text" name="blog[body]"><%= blog.body%></textarea>
        </div>       
        <button class="ui primary big button">
          Update
        </button>
    </form>
</div>
<% include partials/footer %>
